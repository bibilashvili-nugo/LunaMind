model TeacherSubject {
  id        String @id @default(cuid())
  teacherId String
  name      String
  price     Float

  teacher TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)
}

enum TeacherEducation {
  BACHELOR
  MASTER
  DOCTORATE
  OTHER
}

model Lesson {
